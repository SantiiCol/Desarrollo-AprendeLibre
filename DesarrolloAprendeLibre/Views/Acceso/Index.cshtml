<!DOCTYPE html>
@{
    ViewBag.HideFooter = true;
}
<html lang="es">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inicio de Sesión</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>

        .custom-form-container {
            background-color: #ffffff;
            border: 1px solid #d1e7dd; /* Verde suave */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto; /* Centra horizontalmente */
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 150px;
        }

        .custom-form-label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-weight: bold;
            width: 100%;
        }

        .custom-form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #b0bec5; /* Azul suave */
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 16px;
            box-sizing: border-box;
        }

            .custom-form-control:focus {
                border-color: #4dabf7; /* Azul para enfoque */
                outline: none;
            }

        .custom-btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #4dabf7; /* Azul relacionado con la educación */
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-align: center;
        }

            .custom-btn-primary:hover {
                background-color: #1e88e5; /* Azul más oscuro al pasar el mouse */
            }

        .custom-alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            border-color: #f5c6cb;
            margin-bottom: 10px;
            border-radius: 5px;
            text-align: center;
            border: 1px solid #f5c6cb;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        .custom-text-center {
            text-align: center;
            width: 100%;
        }

        .custom-text-primary {
            color: #4dabf7;
            text-decoration: none;
        }

            .custom-text-primary:hover {
                text-decoration: underline;
            }

    </style>
</head>

<body>

    <div class="custom-form-container">
        <form action="@Url.Action("Index", "Acceso")" method="post">
            <label for="email" class="form-label">Correo</label>
            <input type="email" id="email" class="custom-form-control" name="Correo" required>

            <label for="password" class="form-label">Contraseña</label>
            <input type="password" id="password" class="custom-form-control" name="Clave" required>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger">@ViewData["Mensaje"]</div>
            }

            <button class="custom-btn-primary" type="submit">Iniciar Sesión</button>

            <div class="custom-text-center mt-3">
                <a href="@Url.Action("Registrar", "Acceso")" class="custom-text-primary">¿No tienes cuenta? Registrarse</a>
            </div>
        </form>
    </div>

</body>

</html>

